/* Typography */

h1 {font-size: 2em;}
h2 {font-size: 1.75em;}
h3 {font-size: 1.53em;}
h4 {font-size: 1.34em;}
h5 {font-size: 1.17em;}
h6 {font-size: 1.02em;}







/* Links and Buttons */

a.button
  display inline-block
  width auto
  text-decoration none
  border 2px solid bg
  padding 1rem 2rem 1.25rem 2rem
  color black
  border-radius .5rem
  background bg
  font-family 'Ubuntu'
  font-variant small-caps
  font-weight normal
  transition 1s

a.button-light
  background cloud
  border 2px solid black

a.button:focus
a.button:hover
  outline none
  border 2px solid hover
  background hover

a.button-light:focus
a.button-light:hover
  color grey
  border 2px solid grey
  background cloud !important

a.button:active
  background active

a.button-light:active
  color bg
  border 2px solid bg
  background cloud

