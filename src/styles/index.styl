
// ==========================================================================
// Styles for Homepage Layout
// ==========================================================================

@import 'colors.styl'

body
  position relative
  margin 0px
  background bg
  font-family 'Ubuntu'
  font-weight normal
  line-height 1.75
  font-size 100%
  overflow-x hidden

p { font-family: 'Ubuntu Thin'; font-weight: 200; }

h1, h2, h3, h4, h5, h6 { font-family: 'Ubuntu'; font-weight: normal; line-height: 1; }

h1 { font-size: 4em; font-weight: bold; }
h2 { font-size: 1.75em; font-variant: small-caps; font-weight: 300; }
h3 { font-size: 1.5em; }
h4 { font-size: 1.35em; }
h5 { font-size: 1.25em; }
h6 { font-size: 1.1em; }

p.small { font-size: .7em; }
p.med { font-size: 1.2em; }

ul li { font-family: 'Ubuntu Thin'; font-weight: 200; list-style-type: circle; }

strong { font-family: 'Ubuntu'; font-weight: normal; }

em { font-family: 'Ubuntu Thin'; font-style: italic; }

img
  max-width 100%
  border-radius .5rem
  margin 1rem 0


/* Banner Section and subsequent sections */

section#title div.bg-cnt-img::before
  content ''
  position fixed
  top 0px
  left 0px
  height 100%
  width 50%
  z-index 1
  background url('../images/carbon-nantube-bg.png') 50% 80% / cover no-repeat

section.left *
  position relative
  z-index 2

section.right
  position relative
  background white
  padding 3rem 1rem
  z-index 2

section
  padding 1em

section#title p.subtitle
  font-family 'Ubuntu Light'
  font-weight normal
  font-variant small-caps
  font-size 1.165em
  margin-left .25rem
  color grey

@media all and (min-width: 480px) { section#title p.subtitle { font-size: 1.35em; }}
@media all and (min-width: 750px) { section#title p.subtitle { font-size: 1.75em; }}

section#banner
  min-height 400px
  background url('../images/powdered-tubes.jpg') 50% 50% / cover no-repeat white

@media all and (min-width: 975px)

  section#title p.subtitle { font-size: 1.165em; }

  body
    display grid
    grid-template-columns 5fr 7fr
    align-content center

  body { font-size: 1.2rem; }

  section#title
  section#banner
    display grid
    align-content center
    height 100vh

  section.left
    display grid
    align-content top
    height 100%
    justify-content right

  section.left
    display grid
    align-content top
    justify-content right
    height 100%

  section.right > *:not(a)
    width 100%
    max-width 900px

  section.left
    text-align right
    background bg

  section.right
    text-align left
    background white

  section#title::before
    width 50vw

  section#title p.subtitle
    position absolute
    top calc(50% + 1rem)
    right 1.25rem
    padding-left 1rem

  section.left h1
  section.left p.subtitle
  section.left h2
    position relative
    margin-right 5rem
    max-width 500px

  section#title h1::before
    content ''
    position absolute
    right -2rem
    top calc(50% - .035em)
    width .2em
    height .2em
    border-radius 50%
    background black

  section#title h1::after
    content ''
    position absolute
    right -3.75rem
    top calc(50% + .037em)
    width 2.25rem
    height .25rem
    background black
    z-index 3
    border-top-right-radius 5px

  section#title { position:relative;}

  section#title::after
    content ''
    position absolute
    right 2.25rem
    top calc(50% + .3rem)
    width .25rem
    height 100%
    background black
    z-index 3

  section.left
    padding 5rem 1rem

  section.right
    padding 4.5rem 2.25rem 5rem 2.25rem

  section.left h2
    position relative
    margin-top .75rem

  section.left h2::before
    content ''
    position absolute
    right -2rem
    top .475em
    width .25em
    height .25em
    border-radius 50%
    background black

  section.left h2::after
    content ''
    position absolute
    right -3.75rem
    top .5525em
    width 2.25rem
    height .25rem
    background black
    z-index 3
    border-top-right-radius 5px

  section.left { position:relative;}

  section.left::after
    content ''
    position absolute
    right 2.25rem
    top 0
    width .25rem
    height 100%
    background black
    z-index 3

  section.left.last::after
    height 80%

  section.left.last::before
    content ''
    position absolute
    right 2rem
    top 80%
    width .8rem
    height .8rem
    border-radius 50%
    background black

@media all and (min-width: 1200px)

  section.left
    padding 8rem 3rem

  section.right
    padding 7.5rem 4.24rem 8rem 4.25rem

  section#title::after
  section.left::after
    right 4.25rem

  section#title p.subtitle
    position absolute
    right 3.25rem

  section.left.last::before
    right 4rem

@media all and (min-width: 1600px)

  body { font-size: 150%; }

  section#title::after
    top calc(50% + .4rem)



/* Contact Info (left side) */

div.contact p.label
  font-family 'Ubuntu'
  font-variant small-caps
  font-size 1.15em
  font-weight normal
  margin-bottom 0

div.contact p.contact
  margin-top 0
  text-decoration underline

div.contact p.contact a
  color black

div.contact p.contact a:hover
div.contact p.contact a:focus
  outline none
  opacity .5

@media all and (min-width: 975px)

  div.contact
    margin-right 5.25rem



/* Contact Form (right side) */

form#contact fieldset
  padding 0
  border none

#contact p#form-status
  display inline-block
  background grey
  border-radius 1rem
  font-weight bold
  transition 1s

#contact p#form-status.fail
  padding .5rem 1rem
  background #eb9898
  font-size 1rem
  margin-top 0

#contact p#form-status.success
  padding .75rem
  background #c5eb98
  font-size 1rem

input[type="text"]
input[type="email"]
textarea
  padding 1rem
  border-radius .5rem
  border 2px solid light-grey
  font-family 'Ubuntu Thin'
  font-size .8em
  width 47%
  resize vertical

input#name
  margin-right 4%

textarea
  margin 5% 0
  width 99%
  height 12rem

input[type="text"]:focus
input[type="email"]:focus
textarea:focus
input[type="text"]:hover
input[type="email"]:hover
textarea:hover
  outline none
  border 2px solid hover

#submit
  border 2px solid bg
  padding 1rem 2rem 1.25rem 2rem
  color black
  border-radius .5rem
  background bg
  font-variant small-caps
  font-size 1em
  line-height 1.75
  font-family 'Ubuntu'
  font-weight normal
  width auto
  cursor pointer
  transition 1s

input#submit:focus
input#submit:hover
  outline none;
  border 2px solid hover
  background hover

input#submit:active
  border 2px solid grey
  background active



/* Copyright */

p#copyright
  font-size .8em
  color grey
  margin 9rem 0 1rem 0

