<style lang='stylus'>
  /* Logo Styles */

  section#title h1.normal-width { display: none; }
  section#title h1.small-width {
    font-size: 1.7em;
    margin: 1rem 0;
  }

  @media all and (min-width: 420px) { section#title h1.small-width { font-size: 2.25em; }}
  @media all and (min-width: 480px) { section#title h1.small-width { font-size: 2.5em; }}
  @media all and (min-width: 600px) { section#title h1.small-width { font-size: 3em; }}
  @media all and (min-width: 750px) { section#title h1.small-width { font-size: 4em; }}

  @media all and (min-width: 975px) {

    section#title h1.small-width { display: none; }
    section#title h1.normal-width { display: block; }

    section#title h1 {
      position: relative;
      margin: 5rem 5rem 5rem 2rem;
      min-width: 325px;
      max-width: 500px;
      font-family: 'Ubuntu';
      font-weight: bold;
      font-variant: small-caps;
    }

    section#title h1 span#carbon,
    section#title h1 span#nanotubes,
    section#title h1 span#org {
      position: absolute;
    }

    section#title h1 span#carbon {
      bottom: -.7rem;
      right: 2.25rem;
    }

    section#title h1 span#nanotubes {
      font-size: .69em;
      bottom: -3rem;
      right: 2.25rem;
    }

    section#title h1 span#org {
      font-size: .67em;
      /* font-variant: normal; */
      text-orientation: normal;
      writing-mode: vertical-rl;
      /* letter-spacing: -1.25rem; */
      bottom: -2.75rem;
      right: -.5rem;
      overflow: show;
    }

  }

  @media all and (min-width: 1600px) {

    section#title h1 {
      position: relative;
      margin: 5rem 5rem 5rem 2rem;
      min-width: 325px;
      max-width: 500px;
      font-family: 'Ubuntu';
      font-weight: bold;
      font-variant: small-caps;
    }

    section#title h1 span#carbon,
    section#title h1 span#nanotubes,
    section#title h1 span#org {
      position: absolute;
    }

    section#title h1 span#carbon {
      bottom: 0rem;
      right: 3rem;
    }

    section#title h1 span#nanotubes {
      font-size: .69em;
      bottom: -3rem;
      right: 3rem;
    }

    section#title h1 span#org {
      font-size: .67em;
      /* font-variant: normal; */
      text-orientation: normal;
      writing-mode: vertical-rl;
      /* letter-spacing: -1.25rem; */
      bottom: -2.55rem;
      right: -.5rem;
      overflow: show;
    }
  }

  /* Animate On Scroll */

  .animate {
    transition: 1s;
  }

  .animate:nth-child(2) { transition-delay: 200ms; }
  .animate:nth-child(3) { transition-delay: 400ms; }
  .animate:nth-child(4) { transition-delay: 600ms; }
  .animate:nth-child(5) { transition-delay: 800ms; }
  .animate:nth-child(6) { transition-delay: 1000ms; }
  .animate:nth-child(7) { transition-delay: 1200ms; }
  .animate:nth-child(8) { transition-delay: 1400ms; }

  .slide-in-from-right,
  .slide-in-from-left {
    filter: blur(0px);
    opacity: 1;
    transform: translate(0px);
  }

  .slide-in-from-left.hidden {
    filter: blur(3px);
    opacity: 0;
    transform: translate(-100px);
  }

  .slide-in-from-right.hidden {
    filter: blur(3px);
    opacity: 0;
    transform: translate(100px);
  }

  .fadeone {
    animation: fadeone 1.5s;
    transition: .75s;
  }

  @keyframes fadeone {
    0% { opacity: 0; }
    20% { opacity: 0; }
    100% { opacity: 1; }
  }
</style>

<script>
  if ('IntersectionObserver' in window) {

    // Set Up
    var animated = document.querySelectorAll('.animate')
    animated.forEach(function (element) {
      element.classList.add('hidden')
    })

    // Animate On Scroll
    var observer = new IntersectionObserver( function (entries) {
      entries.forEach(function (entry) {
        if (entry.isIntersecting) {
          entry.target.classList.remove('hidden')
        }
      })
    })
    animated.forEach((element) => observer.observe(element))
  }
</script>

